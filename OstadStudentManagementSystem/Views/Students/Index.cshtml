@model IEnumerable<OstadStudentManagementSystem.Models.Student>

@{
    ViewData["Title"] = "Students List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">🎓 Students (Age > 18)</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-person-plus"></i> Add New Student
        </a>
    </div>

    <!-- Search Box -->
    <form method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control" placeholder="🔍 Search by name..." />
            <button class="btn btn-outline-primary" type="submit">Search</button>
        </div>
    </form>

    <!-- Student Count -->
    <div class="alert alert-info">
        <strong>Total Students:</strong> @ViewBag.StudentCount
    </div>

    <!-- Student Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Age</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.FirstName</td>
                            <td>@student.LastName</td>
                            <td>@student.Email</td>
                            <td>@student.Age</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
